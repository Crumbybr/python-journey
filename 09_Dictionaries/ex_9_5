domain_counts = {}
fname = input("Enter filename: ")
if len(fname) < 1 : fname = 'mbox-short.txt'

with open(fname) as f:
    for line in f:
        if line.startswith("From: "):
            line = line.split()
            domain_extract = line[1].split("@")
            domain_name = domain_extract[1]
            
            #print(line) Made it to this point by myself!

            #wrote the line below by myself but made a mistake on the key argument and had a different variable in it then line.    
            domain_counts[domain_name] = domain_counts.get(domain_name, 0) + 1
    print(domain_counts)